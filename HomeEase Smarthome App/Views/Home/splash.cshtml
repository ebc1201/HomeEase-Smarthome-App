<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=768, height=1024, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"] - HomeEase_Smarthome_App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/annyang/2.6.1/annyang.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="splash-page">

    <!-- Splash Screen HTML -->
    <div id="splash-screen">
        <h1>HomeEase</h1>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Set a timeout for redirection (e.g., 3 seconds)
            setTimeout(() => {
                // Redirect to another page
                window.location.href = "@Url.Action("Devices", "Home")"; // Adjust path as needed
            }, 3000); // 3000 milliseconds = 3 seconds
        });
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js" defer></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
