<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HomeEase_Smarthome_App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/2e073ff919.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

   @*  <link rel="stylesheet" href="~/HomeEase_Smarthome_App.styles.css" asp-append-version="true" /> *@
</head>
<body>
    
    <!-- Splash Screen HTML -->
    <div id="splash-screen">
        <div class="logo">
            @* <img src="~/images/pexels-binyaminmellish-106399.jpg" alt="Splash Image"> *@
            <h1>HomeEase</h1>
        </div>
    </div>
    <header>
        <!-- Use flexbox to align items on the same row -->
        <div class="header-content">
            <div class="welcome">
                <h5 class="welcome-home">Welcome home,</h5>
                <h4 class="user-welcome">User!</h4>
            </div>
            <!-- Profile Photo in the right corner -->
            <div class="profile-photo">
                <img src="~/images/profilepic/profilepic1.jpg" alt="Profile Picture" />
            </div>
        </div>
        <div class="nav-buttons">
            <a href="@Url.Action("Devices", "Home")"
               class="btn devicesbtn @(ViewData["Title"] as string == "Devices" ? "btn-success" : "btn-outline-primary")">Devices</a>
            <a href="@Url.Action("Reminders", "Home")"
               class="btn reminderbtn @(ViewData["Title"] as string == "Reminders" ? "btn-success" : "btn-outline-primary")">Reminders</a>
            <a href="@Url.Action("Alarms", "Home")"
               class="btn reminderbtn @(ViewData["Title"] as string == "Alarms" ? "btn-success" : "btn-outline-primary")">Alarms</a>
        </div>
       </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer>
        <!--Voice Activation-->
                    <div class="voice-container">
                        <button class="circle-button" id="startVoiceControl">
                            <i class="fa-solid fa-microphone"></i>
                        </button>
                    </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js" defer></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
